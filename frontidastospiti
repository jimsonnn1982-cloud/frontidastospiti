<script>
// Menu toggle
const menuToggle=document.getElementById('menu-toggle');
const nav=document.getElementById('nav');
menuToggle.addEventListener('click',()=>nav.classList.toggle('active'));

// Default Data
const defaultData={
pageInfo:{title:"Άμεση Φροντίδα στο Σπίτι",desc:"Επαγγελματική νοσηλευτική υποστήριξη στον χώρο σας, με ασφάλεια και αξιοπιστία."},
packages:{
basic:["Αλλαγή πάνας","Μπάνιο εβδομαδιαίο με καρότσι","Σίτιση (κανονική ή αλεσμένη)","Φαρμακευτική αγωγή από το στόμα","Κινητοποίηση ασφαλής","Υποκλυσμός όταν απαιτείται"],
basicFree:"Δωρεάν παροχές: Παρέχονται νεφελοποιητές και συσκευές βρογχοαναρρόφησης.",
advanced:["Πλήρης περιγεννητική φροντίδα","Προσεκτικό μπάνιο με καρότσι","Σίτιση μέσω Levin ή γαστροστομίας","Φαρμακευτική αγωγή βάσει σχήματος","Φροντίδα κατακλίσεων","Αλλαγή ουροκαθετήρα 1-2 φορές/μήνα","Αιμοληψία & συλλογή ούρων"],
advancedFree:"Δωρεάν παροχές: Συσκευές και υγειονομικό υλικό διαθέσιμο δωρεάν.",
premium:["Όλες οι υπηρεσίες προηγούμενων πακέτων","Εξειδικευμένη φροντίδα με ενδοφλέβιες αγωγές","Φροντίδα στομίας","Νεφελοποίηση και αναπνευστική υποστήριξη","24/7 παρακολούθηση"],
premiumFree:"Δωρεάν παροχές: Ολόκληρος εξοπλισμός κατ’ οίκον και επιπλέον υποστήριξη.",
contactAddress:"ΚΑΡΑΟΛΗ ΚΑΙ ΔΗΜΗΤΡΙΟΥ ΤΩΝ ΚΥΠΡΙΩΝ 50",
contactPhone:"6943 795836 • 6938627924"
}
};

// Load and Update Functions
function loadAll(){
  const saved=JSON.parse(localStorage.getItem('siteData')) || defaultData;
  document.getElementById('site-title').textContent=saved.pageInfo.title;
  document.getElementById('site-desc').textContent=saved.pageInfo.desc;
  document.getElementById('title-input').value=saved.pageInfo.title;
  document.getElementById('desc-input').value=saved.pageInfo.desc;

  function fillList(id,arr){const ul=document.querySelector(id+' ul'); ul.innerHTML=""; arr.forEach(i=>{const li=document.createElement('li');li.textContent=i;ul.appendChild(li);});}
  fillList('#basic', saved.packages.basic);
  fillList('#advanced', saved.packages.advanced);
  fillList('#premium', saved.packages.premium);

  document.getElementById('basic-free').textContent=saved.packages.basicFree;
  document.getElementById('advanced-free').textContent=saved.packages.advancedFree;
  document.getElementById('premium-free').textContent=saved.packages.premiumFree;

  document.getElementById('basic-input').value=saved.packages.basic.join("\n");
  document.getElementById('basic-free-input').value=saved.packages.basicFree;
  document.getElementById('advanced-input').value=saved.packages.advanced.join("\n");
  document.getElementById('advanced-free-input').value=saved.packages.advancedFree;
  document.getElementById('premium-input').value=saved.packages.premium.join("\n");
  document.getElementById('premium-free-input').value=saved.packages.premiumFree;
  document.getElementById('contact-address-input').value=saved.packages.contactAddress;
  document.getElementById('contact-phone-input').value=saved.packages.contactPhone;
  document.getElementById('contact-address').textContent=saved.packages.contactAddress;
  document.getElementById('contact-phone').textContent=saved.packages.contactPhone;

  // Load saved logo & background
  const savedLogo = localStorage.getItem('siteLogo');
  const savedBg = localStorage.getItem('siteBg');
  if(savedLogo) document.querySelector('header img').src = savedLogo;
  if(savedBg) document.body.style.backgroundImage = `url('${savedBg}')`;
}

function updateAll(){
  const newData={
    pageInfo:{title:document.getElementById('title-input').value,desc:document.getElementById('desc-input').value},
    packages:{
      basic:document.getElementById('basic-input').value.split("\n"),
      basicFree:document.getElementById('basic-free-input').value,
      advanced:document.getElementById('advanced-input').value.split("\n"),
      advancedFree:document.getElementById('advanced-free-input').value,
      premium:document.getElementById('premium-input').value.split("\n"),
      premiumFree:document.getElementById('premium-free-input').value,
      contactAddress:document.getElementById('contact-address-input').value,
      contactPhone:document.getElementById('contact-phone-input').value
    }
  };
  localStorage.setItem('siteData',JSON.stringify(newData));
  loadAll();
  alert("Όλα τα δεδομένα ενημερώθηκαν!");
}

function resetAll(){localStorage.removeItem('siteData');localStorage.removeItem('siteLogo');localStorage.removeItem('siteBg');loadAll();alert("Επαναφορά στα default!");}

// Logo upload
document.getElementById('logo-input').addEventListener('change', function(event){
  const file = event.target.files[0];
  if(file){
    const reader = new FileReader();
    reader.onload = function(e){
      document.querySelector('header img').src = e.target.result;
      localStorage.setItem('siteLogo', e.target.result);
    }
    reader.readAsDataURL(file);
  }
});

// Background upload
document.getElementById('bg-input').addEventListener('change', function(event){
  const file = event.target.files[0];
  if(file){
    const reader = new FileReader();
    reader.onload = function(e){
      document.body.style.backgroundImage = `url('${e.target.result}')`;
      localStorage.setItem('siteBg', e.target.result);
    }
    reader.readAsDataURL(file);
  }
});

loadAll();
</script>
</body>
</html>
